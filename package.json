{
  "name": "acelga-bus",
  "version": "1.0.0",
  "description": " An extensible typescript message bus with support for middlewares ",
  "main": "src/index.ts",
  "scripts": {
    "test:html-cov": "./node_modules/.bin/jest -w 10 --coverage --coverageReporters=html",
    "test": "./node_modules/.bin/jest -w 10 --coverage --coverageReporters=text",
    "test:watch": "./node_modules/.bin/jest -w 10 --watchAll --coverage --coverageReporters=text",
    "test:coverage": "./node_modules/.bin/jest -w 10 --coverage",
    "build": "./node_modules/.bin/tsc",
    "check": "./node_modules/.bin/tsc --noEmit",
    "cleancoverage": "rm -rf coverage",
    "cleandist": "rm -rf node_modules dist",
    "cleanall": "rm -rf node_modules dist coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DavidBM/acelga-bus.git"
  },
  "keywords": [
    "typescript",
    "bus",
    "message",
    "middleware",
    "rabbitmq",
    "kafka",
    "asyncrhonous",
    "ddd",
    "event-sourcng",
    "event",
    "eventstore",
    "domain"
  ],
  "author": "David Bonet Montes <webbonet@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/DavidBM/acelga-bus/issues"
  },
  "homepage": "https://github.com/DavidBM/acelga-bus#readme",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "jest": "^23.6.0",
    "source-map-support": "^0.5.9",
    "ts-jest": "^23.10.2",
    "typescript": "^3.0.0"
  },
  "jest": {
    "testURL": "http://localhost",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/spec/**/*.+(spec.)(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*",
      "!<rootDir>/src/**/*.d.ts"
    ],
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/src/$1"
    },
    "preset": "ts-jest"
  },
  "dependencies": {
    "@types/backoff": "^2.5.1",
    "@types/debug": "0.0.30",
    "@types/generic-pool": "^3.1.4",
    "@types/got": "^8.3.4",
    "backoff": "^2.5.0",
    "debug": "^3.1.0",
    "geteventstore-promise": "^3.0.1",
    "got": "^9.2.2",
    "iterated-pipes": "^1.0.5"
  }
}
