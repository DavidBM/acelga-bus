{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "inlineSources": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "strictNullChecks": true,
    "noLib": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es7"],
    "sourceMap": true,
    "allowJs": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "spec/**/*"
  ]
}
